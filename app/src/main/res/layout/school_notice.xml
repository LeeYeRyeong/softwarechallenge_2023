<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:text="학교 공지 제목"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/line69"
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:layout_marginTop="60dp"

                    android:src="@drawable/line" />

                <ImageView
                    android:id="@+id/mainrec"
                    android:layout_width="match_parent"
                    android:layout_height="479dp"
                    android:layout_gravity="center"

                    android:src="@drawable/mainrec" />

                <ImageView
                    android:id="@+id/line71"
                    android:layout_width="434dp"
                    android:layout_height="116dp"
                    android:layout_marginTop="80dp"

                    android:src="@drawable/line3" />

                <ImageView
                    android:id="@+id/userikon"
                    android:layout_width="41dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="80dp"
                    android:src="@drawable/user" />

                <TextView
                    android:id="@+id/authorTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="작성자 이름"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="70dp"
                    />

                <ImageView
                    android:id="@+id/line70"
                    android:layout_width="391dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="650dp"
                    android:src="@drawable/line2" />

                <TextView
                    android:id="@+id/dateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="100dp"
                    android:text="작성일"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/viewsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="110dp"
                    android:text="조회수"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/tb_noticelist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="목록"
                    android:layout_marginLeft="280dp"
                    android:layout_marginTop="80dp"
                    android:background="@color/blue"/>

        </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>




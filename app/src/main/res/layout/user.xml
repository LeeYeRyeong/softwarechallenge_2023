<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="380dp"
        android:layout_height="90dp"
        android:layout_marginHorizontal="8dp"
        android:contentDescription="button"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="categori_button"
            app:srcCompat="@drawable/categori" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="mainhome1"
            app:srcCompat="@drawable/schoolhome" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="mainhome2"
            app:srcCompat="@drawable/imac" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="userspace"
            app:srcCompat="@drawable/user" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:background="#00000000"
        android:contentDescription="user"
        app:layout_constraintBottom_toBottomOf="odp"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableLayout
                    android:layout_width="240dp"
                    android:layout_height="140dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">

                    <TableRow
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:text="학교 : " />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="성신여자대학교 " />

                    </TableRow>

                    <TableRow
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="학과/학번 : " />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="컴퓨터공학과 20230000" />
                    </TableRow>

                    <TableRow
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="이름 : " />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="김철수 " />
                    </TableRow>
                </TableLayout>

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/homeex4"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="1dp" />

                <View
                    android:id="@+id/view5"
                    android:layout_width="360dp"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="160dp"
                    android:background="#D9D9D9" />


            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="180dp">

                <View
                    android:id="@+id/view6"
                    android:layout_width="360dp"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="160dp"
                    android:background="#D9D9D9" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <View
                    android:id="@+id/view8"
                    android:layout_width="360dp"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="160dp"
                    android:background="#D9D9D9" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </FrameLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
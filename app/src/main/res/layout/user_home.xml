<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".firstpage">




    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:background="#00000000"
        android:contentDescription="user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBaseline_toBaselineOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="170dp">

                <Button
                    android:id="@+id/log_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="로그아웃"
                    android:backgroundTint="@color/yellow"
                    android:textColor="@color/black"
                    android:layout_marginTop="110dp"
                    android:layout_marginLeft="120dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/writing"
                    android:text="글 작성"
                    android:backgroundTint="@color/blue"
                    android:textColor="@color/black"
                    android:layout_marginTop="110dp"
                    android:layout_marginLeft="230dp"
                    />

                    <!-- 밑줄 그어야함 -->



                <TableLayout
                    android:layout_width="240dp"
                    android:layout_height="140dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">

                    <TableRow
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:text="학교 : " />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="성신여자대학교 " />

                    </TableRow>

                    <TableRow
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="학과/학번 : " />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="컴퓨터공학과 20230000" />
                    </TableRow>

                    <TableRow
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="이름 : " />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="김철수 " />
                    </TableRow>
                </TableLayout>

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/homeex4"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="1dp" />

                <View
                    android:id="@+id/view5"
                    android:layout_width="360dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="160dp"
                    android:background="#D9D9D9" />


            </FrameLayout>

            <HorizontalScrollView
                android:layout_width="410dp"
                android:layout_height="160dp"
                android:contentDescription="나의 공동구매 글">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="3dp"
                        android:text="나의 공동구매 글" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="140dp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="182dp">

                            <ImageButton
                                android:id="@+id/ib_mylist"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginTop="10dp"
                                app:srcCompat="@drawable/homeex3"
                                android:contentDescription="d"/>

                            <View
                                android:id="@+id/view6"
                                android:layout_width="360dp"
                                android:layout_height="2dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginTop="130dp"
                                android:background="#D9D9D9" />

                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="10dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView105"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="3dp"
                        android:text="내가 참여한 공동구매 글" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_marginHorizontal="10dp"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_gravity="bottom"

                            >

                            <ImageView
                                android:id="@+id/imageView215"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginHorizontal="10dp"

                                app:srcCompat="@drawable/homeex3" />

                            <ProgressBar
                                android:id="@+id/progressBar115"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="100dp"
                                android:layout_height="20dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginTop="110dp"
                                android:progressDrawable="@drawable/progressbar_bold"

                                />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="130dp"
                            android:layout_height="140dp"
                            android:layout_gravity="bottom">

                            <ImageView
                                android:id="@+id/imageView25"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginHorizontal="10dp"

                                app:srcCompat="@drawable/homeex3" />

                            <ProgressBar
                                android:id="@+id/progressBar18"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="100dp"
                                android:layout_height="20dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginTop="110dp"
                                android:progressDrawable="@drawable/progressbar_bold"

                                />


                        </FrameLayout>

                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <View
                android:id="@+id/view8"
                android:layout_width="360dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal"

                android:layout_marginHorizontal="10dp"
                android:background="#D9D9D9" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="10dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="3dp"
                        android:text="내가 관심 있는 공동구매 글" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_marginHorizontal="10dp"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_gravity="bottom"

                            >

                            <ImageView
                                android:id="@+id/imageView21"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginHorizontal="10dp"

                                app:srcCompat="@drawable/homeex3" />

                            <ProgressBar
                                android:id="@+id/progressBar11"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="100dp"
                                android:layout_height="20dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginTop="110dp"
                                android:progressDrawable="@drawable/progressbar_bold"

                                />
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="130dp"
                            android:layout_height="140dp"
                            android:layout_gravity="bottom">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginHorizontal="10dp"

                                app:srcCompat="@drawable/homeex3" />

                            <ProgressBar
                                android:id="@+id/progressBar1"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="100dp"
                                android:layout_height="20dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginTop="110dp"
                                android:progressDrawable="@drawable/progressbar_bold"

                                />


                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>



        </LinearLayout>
    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:background="@color/blue"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="3dp"
            >

            <ImageButton
                android:id="@+id/ib_godepartment"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="@color/blue"
                android:contentDescription="dph"
                app:srcCompat="@drawable/imac" />

            <ImageButton
                android:id="@+id/ib_goschool"
                android:layout_width="120dp"
                android:layout_height="70dp"

                android:background="@color/blue"
                android:contentDescription="sch"
                app:srcCompat="@drawable/schoolhome" />

            <ImageButton
                android:id="@+id/ib_gouser"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:background="@color/blue"
                android:contentDescription="user"
                app:srcCompat="@drawable/user" />
        </LinearLayout>

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>